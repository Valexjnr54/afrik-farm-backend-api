# Copy this file to .env and fill in values for local development

PORT=9000
HOST=localhost

# Local SMTP (development) - optional
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=youremail@gmail.com
MAIL_PASSWORD=your_gmail_app_password
MAIL_DEBUG=true

# SendGrid (recommended for production / Render)
SENDGRID_API_KEY=your_sendgrid_api_key
MAIL_PREFER_SENDGRID=true
MAIL_FORCE_SENDGRID=false

# Verified sender identity used by SendGrid (must match a verified Sender or Single Sender in SendGrid)
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com
SENDGRID_FROM_NAME=Afrik Farm

# Other keys
DATABASE_URL=
JWT_SECRET=